{% extends 'base.html.twig' %}

{% block title %}My Notes{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>My Notes</h1>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="mb-3">
        <a href="{{ path('notes_new') }}" class="btn btn-primary">Add New Note</a>
        <a href="{{ path('home_page') }}" class="btn btn-secondary">Back to Home</a>
    </div>
    
    {% if notes is empty %}
        <p>You don't have any notes yet. Create your first note!</p>
    {% else %}
        <div class="row">
            {% for note in notes %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">{{ note.noteText }}</p>
                            <small class="text-muted">Created: {{ note.createdAt|date('Y-m-d H:i') }}</small>
                        </div>
                        <div class="card-footer">
                            <div class="btn-group">
                                <a href="{{ path('notes_edit', {'id': note.id}) }}" class="btn btn-sm btn-info">Edit</a>
                                <a href="{{ path('notes_delete', {'id': note.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this note?')">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}