{% extends 'base.html.twig' %}

{% block title %}Add New Note{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Add New Note</h1>
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    
    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="note_text" class="form-label">Note Content</label>
                    <textarea class="form-control" id="note_text" name="note_text" rows="5" required></textarea>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">Save Note</button>
                    <a href="{{ path('home_page') }}" class="btn btn-secondary">Back to Notes</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}