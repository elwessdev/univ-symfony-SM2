{% extends 'base.html.twig' %}

{% block title %}Home Page{% endblock %}

{% block stylesheets %}
<style>
    .welcome-container {
        text-align: center;
        margin-top: 50px;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .user-info {
        margin-top: 20px;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 5px;
    }
    .logout-btn {
        margin-top: 20px;
    }
    
    /* Notes section styling */
    .display-4{
    font-size: 30px;
    font-weight: 500;
    }
    .notes-container {
        margin-top: 40px;
        padding: 20px;
        text-align: center;
    }
    .notes-title {
        text-align: center;
        margin-bottom: 25px;
        color: #495057;
    }
    .notes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        justify-content: center;
    }
    .note-block {
        background-color: #fff8dc;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
        min-height: 150px;
        position: relative;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .note-block:hover {
        transform: translateY(-5px);
        box-shadow: 2px 5px 10px rgba(0,0,0,0.15);
    }
    .note-text {
        font-size: 16px;
        color: #333;
        margin-bottom: 35px; /* Space for buttons at bottom */
    }
    
    /* New styles for note buttons */
    .note-actions {
        position: absolute;
        bottom: 10px;
        right: 10px;
        display: flex;
        gap: 8px;
    }
    .btn-edit, .btn-delete {
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 12px;
        transition: background-color 0.2s;
    }
    .btn-edit {
        background-color: #6c757d;
        color: white;
    }
    .btn-edit:hover {
        background-color: #5a6268;
    }
    .btn-delete {
        background-color: #dc3545;
        color: white;
    }
    .btn-delete:hover {
        background-color: #c82333;
    }
    .note-cta {
        margin-top: 20px;
        margin-bottom: 30px;
    }
</style>
{% endblock %}

{% block body %}
    <div class="welcome-container">
        <h1 class="display-4">Welcome back {{ username }}</h1>
    </div>
    
    <!-- Notes section -->
    <div class="notes-container">
        <h3 class="notes-title">My Notes</h3>
        {# <p>Manage your personal notes securely and easily.</p> #}
        <div class="note-cta">
            <a href="{{ path('notes_new') }}" class="btn btn-success">Add New Note</a>
        </div>
        
        {# Display flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        {% if notes is empty %}
            <div class="text-center">
                <p class="text-center">You don't have any notes yet. Create your first note!</p>
            </div>
        {% else %}
            <div class="notes-grid">
                    {% for note in notes %}
                        <div class="note-block">
                            <p class="note-text">{{ note.noteText }}</p>
                            <div class="note-actions">
                                <a href="{{ path('notes_edit', {'id': note.id}) }}" class="btn-edit">Edit</a>
                                <a href="{{ path('notes_delete', {'id': note.id}) }}" class="btn-delete" onclick="return confirm('Are you sure you want to delete this note?')">Delete</a>
                            </div>
                        </div>
                    {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
